<%= render "shared/second_header" %>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class="form-wrap">
  <div class="form-header">
    <h1 class="form-header-text">
      Sign Up
    </h1>
  </div>
  
  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">User Name</label>
    </div>
    <%= f.text_area :username, class:"input-default", placeholder: "username",id:"nickname", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Email</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"memorizers@email.com", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"more than 6 letters with numbers" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password Confirmation</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"Password Confirmation" %>
  </div>
  <div class="form-group">
    <div class='register-btn'>
      <%= f.submit "Sign up" ,class:"register-color-btn" %>
    </div>
  </div>
</div>
<% end %>
<%= render "shared/footer" %>