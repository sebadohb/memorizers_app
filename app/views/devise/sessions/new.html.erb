<%= render "shared/second_header" %>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class="form-wrap">
  <div class="form-header">
    <div class="form-header-text">
      <h2>Log in</h2>
    </div>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Email</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"memorizers@email.com", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"more than 6 letters with numbers" %>
  </div>

  <div class="form-group">
    <div class='login-btn'>
      <%= f.submit "Login" ,class:"login-red-btn " %>
    </div>
  </div>
</div>
<% end %>
<%= render "shared/footer" %>